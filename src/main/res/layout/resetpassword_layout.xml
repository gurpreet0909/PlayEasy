<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#030303">


    <include
        android:id="@+id/app_bar1"
        layout="@layout/app_bar" />




    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar1"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="69dp"
        android:ems="10"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        android:hint="Your Email"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/darker_gray" android:layout_marginEnd="10dp" />

    <Button
        android:id="@+id/button14"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="@drawable/login_btn_shape"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="SUBMIT"
        android:textColor="@color/textColor" android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true" android:focusable="true"/>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button14"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="51dp"
        android:paddingStart="20dp"
        android:text="Enter your email registered with us."
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:paddingStart="20dp"
        android:text="We wil send you an email with update."
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />


</RelativeLayout>